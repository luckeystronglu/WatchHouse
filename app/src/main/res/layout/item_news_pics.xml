<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="16sp"/>

    <!-- 图片 -->
    <ImageView
        android:id="@+id/iv_news_pics"
        android:src="@drawable/news_three_default_img"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/tv_news_title"
        android:layout_alignLeft="@+id/tv_news_title"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"/>


    <!-- 评论 -->
    <TextView
        android:id="@+id/tv_news_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_news_c"
        android:layout_alignTop="@+id/tv_news_c"
        android:text="16"
        android:textColor="#8b8888"
        android:textSize="14sp"
        />
    
    <TextView
        android:id="@+id/tv_news_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_news_title"
        android:layout_below="@+id/iv_news_pics"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:text="评"
        android:textColor="#8b8888"
        android:textSize="14sp"
        />

</RelativeLayout>